# =============================================================================
# Naver Connect Chatbot 환경 변수 설정
# =============================================================================
# 이 파일을 .env로 복사하여 실제 값을 입력하세요.
# cp .env.example .env
# =============================================================================

# =============================================================================
# OpenAI Settings
# =============================================================================
# OpenAI Chat Completions API 설정
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL_NAME=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=
OPENAI_ENABLED=false

# =============================================================================
# OpenRouter Settings
# =============================================================================
# OpenRouter를 통한 다양한 LLM 접근 설정
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL_NAME=anthropic/claude-3.5-sonnet
OPENROUTER_TEMPERATURE=0.7
OPENROUTER_MAX_TOKENS=
OPENROUTER_ENABLED=false

# =============================================================================
# Naver Cloud Embeddings Settings
# =============================================================================
# BGE-M3 임베딩 서비스 설정
NAVER_CLOUD_EMBEDDINGS_MODEL_URL=https://clovastudio.apigw.ntruss.com/testapp/v1/api-tools/embedding/...
NAVER_CLOUD_EMBEDDINGS_API_KEY=your-naver-cloud-embeddings-api-key

# =============================================================================
# Naver Cloud Chat Settings (Chat Completions V3)
# =============================================================================
# Clova Studio Chat Completions V3 API 설정
NAVER_CLOUD_CHAT_ENDPOINT=https://clovastudio.apigw.ntruss.com/testapp/v1/chat-completions/...
NAVER_CLOUD_CHAT_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_CHAT_API_GATEWAY_KEY=your-naver-cloud-gateway-key
NAVER_CLOUD_CHAT_MODEL_NAME=HCX-003
NAVER_CLOUD_CHAT_TEMPERATURE=0.7
NAVER_CLOUD_CHAT_MAX_TOKENS=1024
NAVER_CLOUD_CHAT_TOP_K=0
NAVER_CLOUD_CHAT_TOP_P=0.8
NAVER_CLOUD_CHAT_REPEAT_PENALTY=5.0
NAVER_CLOUD_CHAT_STOP_BEFORE=
NAVER_CLOUD_CHAT_INCLUDE_AI_FILTERS=true
NAVER_CLOUD_CHAT_SEED=
NAVER_CLOUD_CHAT_REQUEST_TIMEOUT=60.0
NAVER_CLOUD_CHAT_ENABLED=true

# =============================================================================
# Naver Cloud Segmentation Settings
# =============================================================================
# 문서 분할 서비스 설정
NAVER_CLOUD_SEGMENTATION_ENDPOINT=https://clovastudio.apigw.ntruss.com/testapp/v1/api-tools/segmentation/...
NAVER_CLOUD_SEGMENTATION_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_SEGMENTATION_API_GATEWAY_KEY=your-naver-cloud-gateway-key
NAVER_CLOUD_SEGMENTATION_REQUEST_TIMEOUT=30.0
NAVER_CLOUD_SEGMENTATION_ALPHA=
NAVER_CLOUD_SEGMENTATION_SEGMENT_COUNT=
NAVER_CLOUD_SEGMENTATION_POST_PROCESS=false
NAVER_CLOUD_SEGMENTATION_POST_PROCESS_MAX_SIZE=
NAVER_CLOUD_SEGMENTATION_ENABLED=false

# =============================================================================
# Naver Cloud Summarization Settings
# =============================================================================
# 문서 요약 서비스 설정
NAVER_CLOUD_SUMMARIZATION_ENDPOINT=https://clovastudio.apigw.ntruss.com/testapp/v1/api-tools/summarization/...
NAVER_CLOUD_SUMMARIZATION_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_SUMMARIZATION_API_GATEWAY_KEY=your-naver-cloud-gateway-key
NAVER_CLOUD_SUMMARIZATION_REQUEST_TIMEOUT=30.0
NAVER_CLOUD_SUMMARIZATION_DEFAULT_LENGTH=medium
NAVER_CLOUD_SUMMARIZATION_ENABLED=false

# =============================================================================
# Naver Cloud RAG Reasoning Settings
# =============================================================================
# RAG 기반 추론 서비스 설정
NAVER_CLOUD_RAG_REASONING_ENDPOINT=https://clovastudio.apigw.ntruss.com/testapp/v1/api-tools/reasoning/...
NAVER_CLOUD_RAG_REASONING_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_RAG_REASONING_API_GATEWAY_KEY=your-naver-cloud-gateway-key
NAVER_CLOUD_RAG_REASONING_REQUEST_TIMEOUT=60.0
NAVER_CLOUD_RAG_REASONING_ENABLED=false

# =============================================================================
# Naver Cloud Reranker Settings
# =============================================================================
# 검색 결과 재순위화 서비스 설정
NAVER_CLOUD_RERANKER_ENDPOINT=https://clovastudio.apigw.ntruss.com/testapp/v1/api-tools/reranker/...
NAVER_CLOUD_RERANKER_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_RERANKER_API_GATEWAY_KEY=your-naver-cloud-gateway-key
NAVER_CLOUD_RERANKER_REQUEST_TIMEOUT=30.0
NAVER_CLOUD_RERANKER_DEFAULT_TOP_K=10
NAVER_CLOUD_RERANKER_ENABLED=false

# =============================================================================
# Naver Cloud OpenAI Compatible Settings
# =============================================================================
# OpenAI API 호환 인터페이스 설정
NAVER_CLOUD_OPENAI_COMPATIBLE_BASE_URL=https://clovastudio.apigw.ntruss.com/testapp/v1/chat-completions/openai-compatible/...
NAVER_CLOUD_OPENAI_COMPATIBLE_API_KEY=your-naver-cloud-api-key
NAVER_CLOUD_OPENAI_COMPATIBLE_DEFAULT_MODEL=HCX-003
NAVER_CLOUD_OPENAI_COMPATIBLE_DEFAULT_TEMPERATURE=0.7
NAVER_CLOUD_OPENAI_COMPATIBLE_DEFAULT_MAX_TOKENS=1024
NAVER_CLOUD_OPENAI_COMPATIBLE_REQUEST_TIMEOUT=60.0
NAVER_CLOUD_OPENAI_COMPATIBLE_ENABLED=false

# =============================================================================
# Qdrant Vector Store Settings
# =============================================================================
# Qdrant 벡터 데이터베이스 설정
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=naver_connect_docs
QDRANT_EMBEDDING_DIMENSIONS=1024

# =============================================================================
# Retriever Settings
# =============================================================================
# 검색기 기본 설정
RETRIEVER_DEFAULT_K=10
RETRIEVER_DEFAULT_SPARSE_WEIGHT=0.5
RETRIEVER_DEFAULT_DENSE_WEIGHT=0.5
RETRIEVER_DEFAULT_RRF_C=60
RETRIEVER_BM25_INDEX_PATH=./sparse_index

# =============================================================================
# Multi Query Settings
# =============================================================================
# 다중 쿼리 검색 설정
MULTI_QUERY_NUM_QUERIES=5
MULTI_QUERY_DEFAULT_STRATEGY=rrf
MULTI_QUERY_RRF_K=60
MULTI_QUERY_INCLUDE_ORIGINAL=true

# =============================================================================
# (Dense+Sparse) + Multi Query = Hybrid Settings
# =============================================================================
# 하이브리드 검색 설정 (Final Hybrid)
ADVANCED_HYBRID_BASE_HYBRID_WEIGHT=0.6
ADVANCED_HYBRID_MULTI_QUERY_WEIGHT=0.4

# =============================================================================
# Logging Settings
# =============================================================================
# 로깅 설정
LOG_LEVEL=INFO
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_LOG_DIR=logs
LOG_ROTATION=30 MB
LOG_RETENTION=30 days
LOG_COMPRESSION=zip
LOG_JSON_FORMAT=true
LOG_SERIALIZE=false

# =============================================================================
# Slack Settings
# =============================================================================
# Slack Bot 설정
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_PORT=3000
